@model IEnumerable<JobInfoSortingApp.Models.Skills>

@{
    ViewData["Title"] = "Index";
}

<h1>Skills</h1>

 @if (User.IsInRole("Admin"))
{
<p>
    <a asp-action="Create" class="NewButton">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SkillName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SkillName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkillType)
            </td>
            <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.SkillsId" class="EDDstyle">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.SkillsId" class="EDDstyle">Delete</a>
                    }
                <a asp - action = "Details" asp - route - id = "@item.SkillsId" class="EDDstyle">Details</a>
                    
            </td>
        </tr>
}
    </tbody>
</table>
